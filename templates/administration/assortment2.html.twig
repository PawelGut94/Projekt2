{% extends "base.html.twig" %}

{% block main_content %}
    <div class="padding-top-15">
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link" href="#activity"
                                            data-toggle="tab">{{ 'admin.list_offer' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link active" href="#timeline"
                                            data-toggle="tab">{{ 'admin.create_offer' | trans }}</a></li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class=" tab-pane" id="activity">
                        <div class="post">
                            <div class="card-body p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                    <tr>
                                        <th>{{ 'admin.offer_name' | trans }}</th>
                                        <th>{{ 'admin.category' | trans }}</th>
                                        <th>{{ 'admin.subcategory' | trans }}</th>
                                        <th>{{ 'admin.option' | trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="active tab-pane" id="timeline">
                        <div class="card-body p-0">

                            <form action="{{ path('administration_assortment3',{ 'offer' : offer}) }}" method="get">

                                {% for mark in mark %}
                                    <div>{{ mark }}</div>
                                    {% set sum=0 %}
                                    {% for model in model %}

                                        {% if model.mark.name == mark %}
                                            <input type="checkbox" name="{{ model.name }}" value="{{ model.name }}">{{ model.name }}
                                            {% set sum = 1 %}
                                        {% endif %}
                                    {% endfor %}
                                    {% if sum == 0 %}
                                        Brak modeli dla {{ mark }}
                                    {% endif %}
                                {% endfor %}
                                <div>
                                <button class="btn btn-success" type="submit">
                                    Szukaj

                                </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock main_content %}

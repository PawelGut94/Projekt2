{% extends "base.html.twig" %}

{% block main_content %}
    <div class="padding-top-15">
        {% for message in app.flashes('success-mark') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success-model') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link active" href="#car"
                                            data-toggle="tab">{{ 'admin.list_car' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#addCar"
                                            data-toggle="tab">{{ 'admin.add_car' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#model"
                                            data-toggle="tab">{{ 'admin.list_model' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#addModel"
                                            data-toggle="tab">{{ 'admin.add_model' | trans }}</a></li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="active tab-pane" id="car">
                        <div class="post">
                            <div class="card-body p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                    <tr>
                                        <th>{{ 'admin.categories' | trans }}</th>
                                        <th>{{ 'admin.option' | trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for mark in mark %}
                                        <tr>
                                            <td>
                                                {{ mark.name }}
                                            </td>
                                            <td>
                                                <a href="{{ path('administration_car_option',{ 'option' : 'edytuj','type': 'samochód', 'id' : mark.id}) }}"
                                                   class="text-muted">
                                                    <i class="green fas fa-edit"></i>
                                                </a>
                                                <a href="{{ path('administration_car_option',{ 'option' : 'usuń','type': 'samochód', 'id' : mark.id}) }}"
                                                   class="text-muted">
                                                    <i class="red fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="addCar">
                        <div class="card-body p-0">
                            {{ form(createMark) }}
                        </div>
                    </div>
                    <div class="tab-pane" id="model">
                        <div class="post">
                            <div class="card-body p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                    <tr>
                                        <th>{{ 'admin.category' | trans }}</th>
                                        <th>{{ 'admin.subcategory' | trans }}</th>
                                        <th>{{ 'admin.option' | trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for model in model %}
                                        <tr>
                                            <td>
                                                {{ model.mark.name }}
                                            </td>
                                            <td>
                                                {{ model.name }}
                                            </td>
                                            <td>
                                                <a href="{{ path('administration_car_option',{ 'option' : 'edytuj','type': 'model', 'id' : model.id}) }}"
                                                   class="text-muted">
                                                    <i class="green fas fa-edit"></i>
                                                </a>
                                                <a href="{{ path('administration_car_option',{ 'option' : 'usuń','type': 'model', 'id' : model.id}) }}"
                                                   class="text-muted">
                                                    <i class="red fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="addModel">
                        <div class="card-body p-0">
                            {{ form(createModel) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock main_content %}
{% extends "base.html.twig" %}

{% block main_content %}
    <div class="padding-top-15">
        {% for message in app.flashes('success-category') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success-subcategory') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link active" href="#category"
                                            data-toggle="tab">{{ 'admin.list_category' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#addCategory"
                                            data-toggle="tab">{{ 'admin.add_category' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#subCategory"
                                            data-toggle="tab">{{ 'admin.list_subcategory' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#addSubCategory"
                                            data-toggle="tab">{{ 'admin.add_subcategory' | trans }}</a></li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="active tab-pane" id="category">
                        <div class="post">
                            <div class="card-body p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                    <tr>
                                        <th>{{ 'admin.categories' | trans }}</th>
                                        <th>{{ 'admin.option' | trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for categories in categories %}
                                        <tr>
                                            <td>
                                                {{ categories.name }}
                                            </td>
                                            <td>
                                                <a href="{{ path('administration_categories_option',{ 'option' : 'edytuj','type': 'kategorie', 'id' : categories.id}) }}"
                                                   class="text-muted">
                                                    <i class="green fas fa-edit"></i>
                                                </a>
                                                <a href="{{ path('administration_categories_option',{ 'option' : 'usuń','type': 'kategorie', 'id' : categories.id}) }}"
                                                   class="text-muted">
                                                    <i class="red fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="addCategory">
                        <div class="card-body p-0">
                            {{ form(createCategory) }}
                        </div>
                    </div>
                    <div class="tab-pane" id="subCategory">
                        <div class="post">
                            <div class="card-body p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                    <tr>
                                        <th>{{ 'admin.category' | trans }}</th>
                                        <th>{{ 'admin.subcategory' | trans }}</th>
                                        <th>{{ 'admin.option' | trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for subcategories in subcategories %}
                                        <tr>
                                            <td>
                                                {{ subcategories.category.name }}
                                            </td>
                                            <td>
                                                {{ subcategories.name }}
                                            </td>
                                            <td>
                                                <a href="{{ path('administration_categories_option',{ 'option' : 'edytuj','type': 'podkategorie', 'id' : subcategories.id}) }}"
                                                   class="text-muted">
                                                    <i class="green fas fa-edit"></i>
                                                </a>
                                                <a href="{{ path('administration_categories_option',{ 'option' : 'usuń','type': 'podkategorie', 'id' : subcategories.id}) }}"
                                                   class="text-muted">
                                                    <i class="red fas fa-trash-alt"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="addSubCategory">
                        <div class="card-body p-0">

                            {{ form(createSubcategories) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock main_content %}
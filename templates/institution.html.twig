{% extends "base.html.twig" %}

{% block main_content %}
<div class="padding-top-15">
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <li class="nav-item max-width">
                    {{ form_start(findShops) }}
                    <div class="row">
                        <div class="col-sm-4 criteria">
                            {{ form_row(findShops.city) }}
                        </div>
                        <div class="col-sm-8 criteria">
                            {{ form_row(findShops.save) }}
                        </div>
                    </div>
                    {{ form_end(findShops) }}
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="active tab-pane" id="activity">
                    <div class="post">
                        <div class="card-body p-0">
                            {% for institution in institution %}
                            <div class="contact">
                                <div class="row">
                                    <div class="col-sm-6">
                                        {{ 'city' | trans }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ institution.city }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        {{ 'address' | trans }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ institution.address }}
                                    </div>
                                </div>
                                {% endfor %}
                                <div class="contact">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock main_content %}


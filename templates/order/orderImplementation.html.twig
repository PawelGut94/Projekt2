{% extends "base.html.twig" %}

{% block main_content %}
    <div class="padding-top-15">
        {% for message in app.flashes('success-finished') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success-received') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success-ordered') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="content-settings">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link active" href="#acceptedForImplementationn"
                                            data-toggle="tab">{{ 'order.accepted_for_implementation' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#implementation"
                                            data-toggle="tab">{{ 'order.in_implementation' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#ordered"
                                            data-toggle="tab">{{ 'order.ordered' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#finished"
                                            data-toggle="tab">{{ 'order.finished' | trans }}</a></li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="active tab-pane" id="acceptedForImplementationn">
                        {% if acceptedForImplementation == null %}
                            {{ 'order.lack_order_for_implementation' | trans }}
                        {% else %}
                            <div class="post">
                                <div class="card-body p-0">
                                    <table class="table table-striped table-valign-middle">
                                        <thead>
                                        <tr>
                                            <th>{{ 'order.number_order' | trans }}</th>
                                            <th>{{ 'order.date' | trans }}</th>
                                            <th>{{ 'order.price' | trans }}</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for order in acceptedForImplementation %}
                                            <tr>
                                                <td>
                                                    {{ order.id }}
                                                </td>
                                                <td>{{ order.dateOrder|date('Y-m-d') }}</td>
                                                <td>
                                                    {{ order.price }}
                                                </td>
                                                <td>
                                                    <a href="{{ path('order_details',{ 'option' : 0, 'idOrder' : order.id}) }}">
                                                        <button type="button"
                                                                class="btn btn-success right">{{ 'order.implementation' | trans }}</button>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="tab-pane" id="implementation">
                        {% if inImplementation == null %}
                            {{ 'order.lack_order_in_implementation' | trans }}
                        {% else %}
                            <div class="card-body p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                    <tr>
                                        <th>{{ 'order.number_order' | trans }}</th>
                                        <th>{{ 'order.date' | trans }}</th>
                                        <th>{{ 'order.price' | trans }}</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for order in inImplementation %}
                                        <tr>
                                            <td>
                                                {{ order.id }}
                                            </td>
                                            <td>{{ order.dateOrder|date('Y-m-d') }}</td>
                                            <td>
                                                {{ order.price }}
                                            </td>
                                            <td>
                                                <a href="{{ path('order_details',{ 'option' : 0, 'idOrder' : order.id}) }}"
                                                   class="text-muted">
                                                    <i class="fa fa-search"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                    <div class="tab-pane" id="ordered">
                        {% if ordered == null %}
                            {{ 'order.lack_ordered' | trans }}
                        {% else %}
                            <div class="post">
                                <div class="card-body p-0">
                                    <table class="table table-striped table-valign-middle">
                                        <thead>
                                        <tr>
                                            <th>{{ 'order.number_order' | trans }}</th>
                                            <th>{{ 'order.date' | trans }}</th>
                                            <th>{{ 'order.price' | trans }}</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for order in ordered %}
                                            <tr>
                                                <td>
                                                    {{ order.id }}
                                                </td>
                                                <td>{{ order.dateOrder|date('Y-m-d') }}</td>
                                                <td>
                                                    {{ order.price }}
                                                </td>
                                                <td>
                                                    <a href="{{ path('order_details',{ 'option' : 3, 'idOrder' : order.id}) }}"
                                                       class="text-muted">
                                                        <i class="fa fa-search"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="tab-pane" id="finished">
                        {% if finished == null %}
                            {{ 'order.lack_order_finished' | trans }}
                        {% else %}
                            <div class="post">
                                <div class="card-body p-0">
                                    <table class="table table-striped table-valign-middle">
                                        <thead>
                                        <tr>
                                            <th>{{ 'order.number_order' | trans }}</th>
                                            <th>{{ 'order.date' | trans }}</th>
                                            <th>{{ 'order.price' | trans }}</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for order in finished %}
                                            <tr>
                                                <td>
                                                    {{ order.id }}
                                                </td>
                                                <td>{{ order.dateOrder|date('Y-m-d') }}</td>
                                                <td>
                                                    {{ order.price }}
                                                </td>
                                                <td>
                                                    <a href="{{ path('order_details',{ 'option' : 2, 'idOrder' : order.id}) }}"
                                                       class="text-muted">
                                                        <i class="fa fa-search"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock main_content %}
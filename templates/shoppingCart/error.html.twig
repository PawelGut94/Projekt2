{% extends "base.html.twig" %}

{% block main_content %}
    <div class="padding-top-15">
        <div class="content-settings">
            <div class="error-message">
                {{ 'shopping_cart.error.message' | trans }}
            </div>
            <table class="table table-striped table-valign-middle">
                <thead>
                <tr>
                    <th>{{ 'shopping_cart.error.name' | trans }}</th>
                    <th>{{ 'shopping_cart.error.available_quantity' | trans }}</th>
                    <th>{{ 'shopping_cart.error.selected_quantity' | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for details in shoppingCart %}
                    {% set sum = false %}
                    <tr>
                        <td>
                            {{ details.offer.name }}
                        </td>
                        <td>
                            {% for available in availableOffer %}
                                {% if available.offer.id == details.offer.id %}
                                    {% if sum == false %}
                                        {{ available.quantity }}
                                        {% set sum = true %}
                                    {% endif %}
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td>
                            {{ details.quantity }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('shopping_cart') }}">
                <button type="button"
                        class="btn btn-success">{{ 'shopping_cart.error.return_shopping_cart' | trans }} </button>
            </a>
        </div>
    </div>
{% endblock main_content %}
{% extends "base.html.twig" %}

{% block main_content %}
    <div class="padding-top-15">
        <div class="content-settings">
            <div style="font-size: 19px"><b>Podsumowanie</b></div>
            {% for order in orderCart %}
            <div><b>{{ 'order_cart.number' | trans }}</b> {{ order.id }}</div>
            <div class="row">
                <div class="col-sm-6">
                    {{ 'order_cart.name' | trans }}
                </div>
                <div class="col-sm-3">
                    Cena szt.
                </div>
                <div class="col-sm-3">
                    Cena łącznie
                </div>
            </div>
            {% for offer in details %}
                {% if offer.number.id == order.id %}
                <div class="row">
                    <div class="col-sm-6">{{ offer.name }}</div>
                    <div class="col-sm-3">{{ offer.price }}zł</div>
                    <div class="col-sm-3">{{ offer.totalPrice }}zł</div>

                </div>
                {% endif %}
            {% endfor %}
            <div>
                Razem: {{ order.price }}zł
            </div>
            {% endfor %}

        </div>
    </div>
{% endblock main_content %}
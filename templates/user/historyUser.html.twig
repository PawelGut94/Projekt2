{% extends "base.html.twig" %}

{% block main_content %}
    <div class="padding-top-15">
        <div class="card">
            <div class="card-header p-2">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="nav-link active" href="#inImplementation"
                                            data-toggle="tab">{{ 'user_history.in_implementation' | trans }}</a></li>
                    <li class="nav-item"><a class="nav-link" href="#history"
                                            data-toggle="tab">{{ 'user_history.history' | trans }}</a></li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="active tab-pane" id="inImplementation">
                        <div class="post">
                            <div class="card-body p-0">
                                <table class="table table-striped table-valign-middle">
                                    <thead>
                                    <tr>
                                        <th>{{ 'user_history.status_order' | trans }}</th>
                                        <th>{{ 'user_history.date' | trans }}</th>
                                        <th>{{ 'user_history.price' | trans }}</th>
                                        <th>{{ 'user_history.option' | trans }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for order in orderFinished %}
                                        <tr>
                                            <td>
                                                {{ order.status.name }}
                                            </td>
                                            <td>{{ order.dateOrder|date('Y-m-d') }}</td>
                                            <td>
                                                {{ order.price }}
                                            </td>
                                            <td>
                                                <a href="#" class="text-muted">
                                                    <i class="fa fa-search"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="history">
                        <div class="card-body p-0">
                            <table class="table table-striped table-valign-middle">
                                <thead>
                                <tr>
                                    <th>{{ 'user_history.number_order' | trans }}</th>
                                    <th>{{ 'user_history.shop' | trans }}</th>
                                    <th>{{ 'user_history.date' | trans }}</th>
                                    <th>{{ 'user_history.price' | trans }}</th>
                                    <th>{{ 'user_history.option' | trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for order in history %}

                                    <tr>
                                        <td>
                                            {{ order.id }}
                                        </td>
                                        <td>
                                           {{ order.institution.name }}
                                        </td>
                                        <td>{{ order.dateOrder|date('Y-m-d') }}</td>
                                        <td>
                                            {{ order.price }}
                                        </td>
                                        <td>
                                            <a href="{{ path('history',{ 'option' : 'szczegóły', 'idOrder' : order.id}) }}" class="text-muted">
                                                <i class="fa fa-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock main_content %}